# Azure OpenAI Configuration
# ===========================
# Azure OpenAI 리소스의 엔드포인트 URL
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# Azure OpenAI API 키 (Keys and Endpoint 메뉴에서 확인)
AZURE_OPENAI_API_KEY=your-api-key-here

# Azure OpenAI API 버전 (기본값 사용 권장)
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# 배포된 GPT 모델 이름 (Azure OpenAI Studio에서 설정한 배포 이름)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-deployment

# Application Configuration
# =========================
# 업로드 가능한 최대 파일 크기 (바이트 단위, 기본값: 10MB)
MAX_FILE_SIZE=10485760

# 임시 파일 보관 시간 (시간 단위, 기본값: 1시간)
TEMP_FILE_RETENTION_HOURS=1

# 백엔드 서버 URL (프론트엔드에서 사용)
BACKEND_URL=http://localhost:8000

# Development Settings
# ====================
# 개발 모드 활성화 (true/false)
DEBUG=false

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# CORS 허용 도메인 (쉼표로 구분, * 는 모든 도메인 허용)
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# Security Settings
# =================
# API 요청 제한 (분당 요청 수)
RATE_LIMIT_PER_MINUTE=60

# 세션 타임아웃 (분 단위)
SESSION_TIMEOUT_MINUTES=30

# Production Settings (프로덕션 환경에서만 사용)
# ================================================
# 프로덕션 모드 활성화
# PRODUCTION=true

# 데이터베이스 URL (향후 확장용)
# DATABASE_URL=postgresql://user:password@localhost/korean_doc_checker

# Redis URL (캐싱용, 향후 확장용)
# REDIS_URL=redis://localhost:6379/0

# SSL 설정
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem